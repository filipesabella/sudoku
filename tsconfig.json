{
  "externalTranspiler": "babel",
  "compileOnSave": true,
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es6", "dom"],
    "strictNullChecks": true,
    "removeComments": true,
    "jsx": "react",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}
